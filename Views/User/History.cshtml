@model List<UserHistoryViewModel>
@{
    ViewData["Title"] = "User History";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-history"></i> User Activity History</h2>
    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>

<!-- Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate" />
            </div>
            <div class="col-md-4">
                <label class="form-label">User (Admin only)</label>
                <input type="number" name="userId" class="form-control" placeholder="User ID" 
                       value="@ViewBag.UserId" @(User.IsInRole("Admin") ? "" : "disabled") />
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary d-block w-100">
                    <i class="fas fa-search"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- History Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Username</th>
                        <th>Action</th>
                        <th>Details</th>
                        <th>IP Address</th>
                        <th>Date & Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var history in Model)
                    {
                        <tr>
                            <td>@history.Username</td>
                            <td>
                                <span class="badge bg-@(history.Action == "Login" ? "success" : 
                                    history.Action == "Logout" ? "secondary" : 
                                    history.Action.Contains("Delete") ? "danger" : "primary")">
                                    @history.Action
                                </span>
                            </td>
                            <td>@history.Details</td>
                            <td><code>@history.IpAddress</code></td>
                            <td>@history.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No History Found</h5>
                <p class="text-muted">No activity records match your search criteria.</p>
            </div>
        }
    </div>
</div>